rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /rdtechinnovations_content/{document=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.email in get(/databases/$(database)/documents/rdtechinnovations_admins/admins).data.emails;
    }
    match /rdtechinnovations_submission/{document=**} {
      allow read: if request.auth != null && request.auth.token.email in get(/databases/$(database)/documents/rdtechinnovations_admins/admins).data.emails;
      allow write: if request.auth != null;
    }
    match /rdtechinnovations_admins/{document=**} {
      allow read, write: if request.auth != null && request.auth.token.email in get(/databases/$(database)/documents/rdtechinnovations_admins/admins).data.emails;
    }
  }
}
